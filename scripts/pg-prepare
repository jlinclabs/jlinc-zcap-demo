#!/usr/bin/env node

const getHttpServer = require('../lib/getHttpServer')

const app = getHttpServer(process.argv[2] || '.')
if (!app){
  console.error(`app not found`)
  process.exit(1)
}

async function main(){
  await app.pg.resetSchema()
}
main().then(
  () => { process.exit(0) },
  error => { console.error(error); process.exit(1) },
)
