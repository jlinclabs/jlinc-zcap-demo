#!/usr/bin/env node

const getApp = require('../lib/getApp')

const app = getApp(process.argv[2] || '.')
if (!app){
  console.error(`app not found`)
  process.exit(1)
}

async function main(){
  await app.pg.reset()
}
main().then(
  () => { process.exit(0) },
  error => { console.error(error); process.exit(1) },
)
