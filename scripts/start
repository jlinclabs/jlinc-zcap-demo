#!/usr/bin/env node

const getHttpServer = require('../http-server')

const app = getHttpServer(process.argv[2] || '.')
if (!app){
  console.error(`app not found`)
  process.exit(1)
}

app.start().then(
  () => {
    console.log(`${app.name} PORT=${app.port} ${app.url}`)
  },
  error => {
    console.error(error)
  },
)
