<h1>@{{username}}</h1>

{{#if user}}
  {{#if itsUs}}
    <form method="post" action="/profile">
      <p>
        <label for="realname-input">Real Name</label><br/>
        <input
          required
          id="realname-input"
          type="text"
          name="realname"
          value="{{currentUser.realname}}"
          placeholder="Beth Smith"
        />
      </p>
      <p>
        <label for="email-input">Email</label><br/>
        <input
          id="email-input"
          type="email"
          name="email"
          value="{{currentUser.email}}"
          placeholder="you@example.com"
        />
      </p>
      <p>
        <button type="submit" class="btn btn-primary">UPDATE</button>
      </p>
    </form>
  {{else}}
    <dl>
      <dt>Real Name:</dt>
      <dd>{{user.realname}}</dd>
      <dt>Email:</dt>
      <dd>{{user.email}}</dd>
      <dt>Created:</dt>
      <dd>{{user.created_at}}</dd>
    </dl>
  {{/if}}

  <h4>Hyperlinc Events</h4>
  {{#each hyperlincEvents}}
    <fieldset>
      <legend>{{eventType}}</legend>
      {{at}}
      <pre>{{toJSON this}}</pre>
    </fieldset>

  {{/each}}

{{else}}
  <i>user not found</i>
{{/if}}
